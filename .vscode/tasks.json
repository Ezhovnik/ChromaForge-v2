{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe сборка активного файла",
            "dependsOn": ["Compile Resources"],
            "command": "C:\\msys64\\ucrt64\\bin\\g++.exe",
            "args": [
                "-g",
                "-std=c++17",
                "-I${workspaceFolder}/src",
                "-I${workspaceFolder}/include",
                "-L${workspaceFolder}/lib",
                "${workspaceFolder}/src/main.cpp",
                "${workspaceFolder}/src/window/Window.cpp",
                "${workspaceFolder}/src/window/Events.cpp",
                "${workspaceFolder}/src/stb.cpp",
                "${workspaceFolder}/src/glad.c",
                "-lglfw3dll", 
                "-lopengl32",
                "-lglew32",
                "-o",
                "${workspaceFolder}/build/ChromaForge.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Сборка проекта с OpenGL"
        }
    ],
    "version": "2.0.0"
}