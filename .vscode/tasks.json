{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe сборка активного файла",
            "command": "C:\\msys64\\ucrt64\\bin\\g++.exe",
            "args": [
                "-g",
                "-std=c++17",
                "-I${workspaceFolder}/Header Files",  // Путь к заголовкам
                "-I${workspaceFolder}/include",      // Доп. пути (если есть)
                "-L${workspaceFolder}/lib",          // Библиотеки (если нужны)
                "${workspaceFolder}/Source Files/main.cpp",
                "${workspaceFolder}/Source Files/VAO.cpp",
                "${workspaceFolder}/Source Files/VBO.cpp",
                "${workspaceFolder}/Source Files/EBO.cpp",
                "${workspaceFolder}/Source Files/shaderClass.cpp",
                "${workspaceFolder}/Source Files/stb.cpp",
                "${workspaceFolder}/Source Files/Texture.cpp",
                "${workspaceFolder}/Source Files/Camera.cpp",
                "${workspaceFolder}/Source Files/Mesh.cpp",
                "${workspaceFolder}/Source Files/glad.c",
                "-lglfw3dll", 
                "-lopengl32",
                "-o",
                "${workspaceFolder}/build/ChromaForge.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Сборка проекта с OpenGL"
        }
    ],
    "version": "2.0.0"
}